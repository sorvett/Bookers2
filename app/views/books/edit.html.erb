<h1>Editing Book</h1>
<!-- form_for部分 -->
 <% if @book.errors.any? %>
  <p>error</p>
<% @book.errors.full_messages.each do |msg| %>

     <%= msg %><br>
<% end %>
<% end %>
<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>
<% end %>
<a><%= link_to "Show", book_path(@book.id) %></a>
<a><%= link_to "Back", books_path %></a>