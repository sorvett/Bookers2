<body>
<div class="body">
<div class="profile-container">
  <div class="container">
   <div class="row">
    <div class="col-xs-3">
            <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "profile-img", fallback: "no_image.jpg" %>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th><%=@user.name%></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th></th>
              </tr>
            </tbody>
          </table>
          <div class="row">
            <%= link_to "", edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>
          </div>




            <h2>New book</h2>
            <%= form_for(@book) do |f| %>
             <% if @book.errors.any? %> 
             <div class="alert alert-warning"> 
              <p>error</p> 
              <ul> 
                <% @book.errors.full_messages.each do |message| %> 
                <li><%= message %></li> 
                <% end %> 
              </ul> 
            </div> 
            <% end %> 
            <label for="book_title">Title</label>
            <%= f.text_field :title %>
            <label for="book_opinion">Opinion</label>
            <%= f.text_area :body %>
            <%= f.submit 'Create Book' %>
            <% end %>
        </div>


      <div class="col-xs-9">
     <h1>Books</h1>
     <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tr>
          <% @books.each do |book| %>
          <tbody>
          <td> <%=link_to(book.user) do%><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %><%end%>
          </td>
          <td><%= link_to  book_path(book.id) do %>
            <%=book.title%>
            <% end %>
          </td>
          <td><%=book.body%></td>
          </tbody>
          <%end%>
        </tr>
      </table>
      </div>
    </div>
  </div>
</div>
</div>
</body>

