<body>
<div class="body">
<div class="container">
ã€€<div class="row">
    <div class="col-xs-3">
    	<h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
            <table class="table">
            	<tbody>
            		<tr>
                        <th>name</th>
            			<th><%=@user.name%></th>

            		</tr>
            		<tr>
                        <th>introduction</th>
            			<th><%=@user.introduction%></th>

            		</tr>
            	</tbody>
            </table>
            <div class="row">
        	<p><%= link_to "", edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%></p>
            </div>


        <h2>New book</h2>
        <%= form_for(@book) do |f| %>
         <% if @book.errors.any? %>
          <p>error</p>
        <% @book.errors.full_messages.each do |msg| %>

             <%= msg %><br>

        <% end %>
        <% end %>
            <label for="book_title">Title</label>
            <%= f.text_field :title %>
            <label for="book_opinion">Opinion</label>
            <%= f.text_area :body %>
            <%= f.submit 'Create Book' %>
        <% end %>
    </div>

         <div class="col-xs-9">
         <h1>Books</h1>
         <table class="table table-striped">
            <thead>
             <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
             </tr>
            </thead>
             <tbody>
            <% @books.each do |book| %>
            <tr>
            <td> <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %></td>
           <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
        </tbody>
        <%end%>
        </tr>
        </table>
        </div>
    </div>
</div>
</body>